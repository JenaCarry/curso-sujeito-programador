{
  "compilerOptions": {
    // --- Configs essenciais para React + Vite ---
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    "allowJs": false,
    "isolatedModules": true,

    // --- Configs essenciais para a API da Vercel ---
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    
    // --- Configs de qualidade de c√≥digo e compatibilidade ---
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "api"] 
}